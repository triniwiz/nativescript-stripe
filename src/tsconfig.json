{
  "compilerOptions"       : {
    "target"                : "es2017",
    "module"                : "esnext",
    "moduleResolution"      : "node",
    "sourceMap"             : true,
    "emitDecoratorMetadata" : true,
    "experimentalDecorators": true,
    "noImplicitUseStrict"   : true,
    "noEmitHelpers"         : true,
    "declaration"           : true,
    "removeComments"        : true,
    "noEmitOnError"         : true,
    "skipLibCheck"          : true,
    "skipDefaultLibCheck"   : true,
    "noImplicitAny"         : false,
    "lib"                   : [
      "es2017",
      "dom",
      "es6"
    ],
    "baseUrl"               : ".",
    "plugins": [
      { "transform": "@nativescript/webpack/transformers/ns-transform-native-classes", "type": "raw" }
    ]
  },
  "exclude"               : [
    "node_modules"
  ]
}
